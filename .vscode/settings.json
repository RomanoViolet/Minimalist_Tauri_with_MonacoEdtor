{
  "editor.renderWhitespace": "all",
  "editor.insertSpaces": true,
  "editor.parameterHints.enabled": true,
  "editor.codeLens": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "files.eol": "\n",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.insertFinalNewline": true,
  "liveServer.settings.port": 3002,
  "debug.javascript.usePreview": false,
  "liveServer.settings.useBrowserPreview": true,
  // The number of spaces a tab is equal to.
  "editor.tabSize": 4,
  // When opening a file, `editor.tabSize` and `editor.insertSpaces` will be detected based on the file contents.
  "editor.detectIndentation": true,
  "editor.tokenColorCustomizations": {
    "comments": "#5e5e5e"
  },
  "window.zoomLevel": 0.7,
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.inlayHints.enabled": "on",
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.mutable": {
        "fontStyle": "bold" // set to empty string to disable underline, which is the default
      }
    }
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.definitionLinkOpensInPeek": true,
  "editor.semanticHighlighting.enabled": true,
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "livePreview.defaultPreviewPath": "/backend/target/debug/coverage/index.html",
  // https://github.com/ritwickdey/vscode-live-server/blob/HEAD/docs/settings.md
  "liveServer.settings.root": "/backend/target/debug/coverage",
  "rust-analyzer.linkedProjects": [
    "/workspaces/sw-architects-tools/Tauri/tauri-with-rust/src-tauri/Cargo.toml"
  ],
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "strings": true
    },
  },
  "editor.suggest.insertMode": "replace",
  "editor.mouseWheelZoom": true,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "indentRainbow.lightIndicatorStyleLineWidth": 2,
}
